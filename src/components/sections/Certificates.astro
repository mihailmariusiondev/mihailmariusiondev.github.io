---
import Section from "../Section.astro";
import { certificates } from "@cv";
---

<Section title="Certifications">
  <ul>
    {
      certificates.map(({ name, issuer, date, url }) => {
        const year = new Date(date).getFullYear();

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>
                    <a href={url} target="_blank" rel="noopener noreferrer">
                      {name}
                    </a>
                  </h3>
                  <h4>{issuer}</h4>
                </div>
                <time>{year}</time>
              </header>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
